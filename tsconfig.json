{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "sourceMap": true
  },
  "files": [
    "./src/app/app.spec.ts",
    "./src/app/app.ts",
    "./src/app/demo-form/demo-form.ts",
    "./src/app/home/directives/x-large.spec.ts",
    "./src/app/home/directives/x-large.ts",
    "./src/app/home/home.spec.ts",
    "./src/app/home/home.ts",
    "./src/app/home/providers/title.spec.ts",
    "./src/app/home/providers/title.ts",
    "./src/app/services/customer.service.ts",
    "./src/main.ts",
    "./src/vendor.ts",
    "./test/injector.spec.ts",
    "./test/sanity-test.spec.ts"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  }
}
